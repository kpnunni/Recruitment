

    <h1>Login:</h1>


    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email ,:value=>(params[:session]? params[:session][:email] : "") ,required:{}%>
        <%= f.label :password %>
        <%= f.password_field :password ,required:{}%><br />

        <%= f.check_box :remember%>Remember_me<br />


        <%= f.submit "Sign in", class: "btn btn-large btn-primary"%>

    <% end %>
