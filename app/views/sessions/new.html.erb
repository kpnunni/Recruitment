<div class="row">
  <div class="span12 offset0">



    <h1>Login:</h1>


    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <% if params[:session].nil? %>
            <%= f.text_field :email %>
        <% else %>
            <%= f.text_field :email ,:value=>params[:session][:email] %>
        <% end %>
        <%= f.label :password %>
        <%= f.password_field :password %><br />

        <%= f.check_box :remember %>
        <%= f.label :remember_me %>


        <%= f.submit "Sign in", class: "btn btn-large btn-primary"%>

    <% end %>
    Sign up as<%= link_to ' Employee',signup_sessions_path(:as=>"emp") %>/
    <%= link_to ' Candidate',signup_sessions_path(:as=>"can") %> <br/>
    <%= link_to 'Forgot password?',forgotpass_sessions_path %> <br/>

  </div>
</div>



