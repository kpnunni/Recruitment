<div class="row">
  <div class="span10 offset0">

    <h6>Instructions</h6><br/><br/>
    <b>
    <% @instructions.each do |ins|%>
       <%= image_tag 'point.png' %>
          <%= ins.instruction  %><br/>
    <% end %>
        <%= image_tag 'point.png' %>Answering time for each questions may be different.<br/>
    <%= image_tag 'point.png' %>Total time:<%= number_with_precision(@exam.total_time/60.0,:precision=>2)    %>min<br/>
    <%= image_tag 'point.png' %>Number of questions:<%= @exam.no_of_question %><br/>
    <%= image_tag 'point.png' %>Pop up new window when you click 'start exam'<br/>    </b>

    <br/>

    <% if @diff>-30 && @diff<30 %>
        <h2><%= link_to 'start_exam >>','/answers/blank',:onclick=>"popup()" %>
        </h2>
    <% else %>
        <h2><%= "Time remaining for your exam:"+ time_ago_in_words(@date)   %></h2>
        <%= "scheduled time: "+ @schedule.sh_time.strftime("%I:%M%p")   %>

        <h2><%=link_to 'sign out', '/signout',method: :delete   %></h2>
    <% end %>

  </div>
</div>

 <script type="text/javascript">
   function popup()
   {
       var a=window.open('/answers/new',"fullscreen=1",true);

       a.focus();
       self.blur();
   }
 </script>

















