    <div align="center">
         <%= image_tag 'welcome.png'  %>
    </div>
    <div class="error_msg">
      <%= render  "shared/error_message", :target => @candidate  %>
    </div>

    <FONT COLOR="#191970">
      <h3>


      Hi <%= @candidate.name  %>, Please fill your details.</h3> </FONT>


    <br/>
    <%= nested_form_for @candidate, :url=>"/answers/#{@candidate.id}/candidate_update" do |f|%>
       <table width="75%" >
         <tr>
           <td class="rght" >
                Address<%= image_tag 'mandatory.png',:title=>"mandatory"  %>
                 <%= f.text_area  :address , :rows=>5 ,required:{}%>
           </td>
           <td class="rght" >
                Phone no 1<%= image_tag 'mandatory.png',:title=>"mandatory"  %>
                <%= f.text_field :phone1 ,required:{}  %> <br/>
                Phone no 2
                <%= f.text_field :phone2 %> <br/>
               Technology
               <%= f.text_field :technology %>
           </td>

         </tr>

         <tr>
           <td class="rght" >
                Certification
                <%= f.text_field :certification  %>
           </td>
           <td class="rght" >
                Skills
                <%= f.text_field :skills %>
           </td>
         </tr>
        </table>
        <br />
        <h3>Experiences:</h3>

        <%= f.fields_for :experiences  do |op| %>

            <%= op.text_field "from_date",:class=>"calendar",:placeholder => "From date*" %>
            <%= op.text_field "to_date",:class=>"calendar",:placeholder => "To date*" %>
            <%= op.text_field :experience_in ,:class=>"text_box3",:placeholder => "Experience in*"%>
            <%= op.text_field :experience_from,:class=>"text_box3",:placeholder => "Experience from" %>
            <%= op.link_to_remove image_tag('delete.png',:title =>"Remove" )  %>
        <% end %>
        <p><%= f.link_to_add image_tag('addc.png',:title =>"Add new experience"  ), :experiences %></p>

        <br /><h3>Qualifications</h3>
        <%= f.fields_for :qualifications  do |op| %>

            <%= op.text_field :qualification_in,:class=>"text_box3" ,:placeholder => "Qualification_in*"%>
            <%= op.text_field :qualification_from,:class=>"text_box3",:placeholder => "Qualification_from" %>
            <%= op.text_field "from_date",:placeholder => "From_date*", :class=>"calendar"  %>
            <%= op.text_field "to_date",:placeholder => "To_date*"  ,:class=>"calendar"%>
            <%= op.text_field :mark_percentage,:placeholder => "Mark_percentage",:class=>"text_box3",:style=>"width:110px" %>
            <%= op.text_field :comments,:placeholder => "Comments" ,:class=>"text_box3"%>
            <%= op.link_to_remove image_tag('delete.png',:title =>"Remove" )  %>

        <% end %>

        <p><%= f.link_to_add image_tag('addc.png',:title =>"Add new qualification "  ), :qualifications %></p>

        <br />
        <%= f.submit    :name=>"from",:value=>"update",class: "btn btn-large btn-primary",:disable_with=>"Updating.." %>


    <% end %>
    <h2><% link_to 'start_exam',new_answer_path %></h2>