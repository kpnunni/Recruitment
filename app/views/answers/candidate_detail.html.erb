<div class="row">
  <div class="span12 offset0">

    <h1>
    <%= image_tag 'welcome.png' %>

    </h1>
    <FONT COLOR="#191970">
      <h3>
    Hi
    <%= @candidate.name %>,

    please fill your details,</h3> </FONT>
     <div id='flash-notice' style="color: #8b161a;" ><b><%= flash[:notice] %></b></div>

    <% if @candidate.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@candidate.errors.count, "error") %> prohibited this candidate from being saved:</h2>

          <ul>
            <% @candidate.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <br/>
    <%= form_for @candidate do |f|%>
       <table width="75%" >
         <tr>
           <td class="rght" >
                Address<%= image_tag 'mandatory.png',:title=>"mandatory"  %>
                 <%= f.text_area  :address , :rows=>5%>
           </td>
           <td class="rght" >
                Phone no 1<%= image_tag 'mandatory.png',:title=>"mandatory"  %>
                <%= f.text_field :phone1 %> <br/>
                Phone no 2
                <%= f.text_field :phone2 %> <br/>
               Technology <%= image_tag 'mandatory.png',:title=>"mandatory"  %>
               <%= f.text_field :technology %>
           </td>

         </tr>

         <tr>
           <td class="rght" >
                Certification <%= image_tag 'mandatory.png',:title=>"mandatory"  %>
                <%= f.text_field :certification %>
           </td>
           <td class="rght" >
                Skills <%= image_tag 'mandatory.png',:title=>"mandatory"  %>
                <%= f.text_field :skills %>
           </td>
         </tr>
        </table>
        <br />
        <h3>Experiences</h3>

        <table border="1"  width="100%"  >
          <tr>
            <th>from_date<%= image_tag 'mandatory.png',:title=>"mandatory" %></th>
            <th>to_date<%= image_tag 'mandatory.png',:title=>"mandatory"  %></th>
            <th>experience_in<%= image_tag 'mandatory.png',:title=>"mandatory"  %></th>
            <th>experience_from</th>

          </tr>
          <%= f.fields_for :experiences  do |op| %>
              <tr>
                <td><%= op.calendar_date_select "from_date", :valid_date_check => "date < (new Date()).stripTime()"  , :popup => :force ,:class=>"text_box3"%>                </td>
                <td><%= op.calendar_date_select "to_date", :valid_date_check => "date < (new Date()).stripTime()"  , :popup => :force ,:class=>"text_box3"%>                </td>
                <td><%= op.text_field :experience_in ,:class=>"text_box3"%></td>
                <td><%= op.text_field :experience_from,:class=>"text_box3" %></td>

              </tr>
          <% end %>
        </table>


        <br /><h3>Qualifications</h3>

        <table border="1"   width="100%" >
          <tr>
            <th>qualification_in<%= image_tag 'mandatory.png',:title=>"mandatory"  %></th>
            <th>qualification_from</th>
            <th>from_date<%= image_tag 'mandatory.png',:title=>"mandatory"  %></th>
            <th>to_date<%= image_tag 'mandatory.png',:title=>"mandatory"  %></th>
            <th>mark_percentage</th>
            <th>comments</th>


          </tr>
          <%= f.fields_for :qualifications  do |op| %>
              <tr>
                <td><%= op.text_field :qualification_in,:class=>"text_box3" %></td>
                <td><%= op.text_field :qualification_from,:class=>"text_box3" %></td>
                <td><%= op.calendar_date_select "from_date", :valid_date_check => "date < (new Date()).stripTime()"  , :popup => :force,:class=>"text_box3" %></td>
                <td><%= op.calendar_date_select "to_date", :valid_date_check => "date < (new Date()).stripTime()"  , :popup => :force ,:class=>"text_box3"%></td>
                <td><%= op.text_field :mark_percentage,:class=>"text_box3" %></td>
                <td><%= op.text_field :comments ,:class=>"text_box3"%></td>
              </tr>
          <% end %>
        </table>

        <br /> <br />






        <br />
        <%= f.submit    :name=>"from",:value=>"update",class: "btn btn-large btn-primary" %>


    <% end %>
    <h2><% link_to 'start_exam',new_answer_path %></h2>
  </div>
</div>