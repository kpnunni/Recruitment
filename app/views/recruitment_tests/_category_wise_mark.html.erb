
<div class="table">
  <div class="tr">
    <div class="td">Category</div>
    <div class="td">no of questions</div>
    <div class="td">Right answers</div>
    <div class="td">Wrong answers</div>
    <div class="td">Mark</div>
    <div class="td">Mark(%)</div>
  </div>
  <% Category.all.each do |cat| %>
      <% if @recruitment_test.candidate.schedule.exam.questions.where("category_id=?",cat.id).count!=0 %>
          <div class="tr">
            <div class="td"><%=cat.category    %></div>
            <div class="td"><%= @recruitment_test.candidate.schedule.exam.questions.where("category_id=?",cat.id).count %></div>
            <div class="td"><%= @recruitment_test.each_right_answers(cat) %></div>
            <div class="td"><%= @recruitment_test.each_wrong_answers(cat) %></div>
            <div class="td"><%= @recruitment_test.calc_mark(cat)  %></div>
            <div class="td"><%= number_with_precision(@recruitment_test.calc_mark_percentage(cat),:precision=>2)  %></div>
          </div>
      <% end %>
  <% end %>
</div>

<% if @extra_answers.present? %>
    <br/>
    <h3>Additional answers:</h3>

    <div class="table"  >
      <div class="tr">
        <div class="td">Category</div>
        <div class="td">Answer</div>
        <div class="td">Right answers</div>
        <div class="td">Right?</div>
        <div class="td">Complexity</div>
        <div class="td">Time Taken(sec)</div>
      </div>
      <% @extra_answers.each do |ans| %>
          <% if ans.question %>
              <div class="tr">
                <div class="td"><%=ans.question.category.category   %></div>
                <div class="td"><%= ans.answer %></div>
                <div class="td"><%= ans.question.answer_id %></div>
                <div class="td"><%= ans.answer == ans.question.answer_id ? "Yes" : "No" %></div>
                <div class="td"><%= ans.question.complexity.complexity %></div>
                <div class="td"><%= ans.time_taken %></div>
              </div>
          <% end %>
      <% end %>
    </div>
<% end %>
