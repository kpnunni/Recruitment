<table border="3" width="100%"  >
  <tr>
    <th>name</th>
    <th>email id</th>
    <th>phone</th>
    <th>skills</th>
    <th>Exam Completed?</th>
    <th></th>
    <th></th>
    <th></th>
    <% if current_user.has_role?('admin')   %>
        <th></th>
    <% end %>
   </tr>

<% @candidates.each do |candidate| %>
  <tr>
    <td width="15%" class="lft"  ><%= candidate.name %></td>
    <td width="20%" class="lft"><%= candidate.user.user_email  %></td>
    <td width="10%" class="lft"><%= candidate.phone1 %></td>
    <td width="25%" class="lft"><%= candidate.skills%></td>
    <% if !candidate.recruitment_test.nil?   %>
        <td width="10%"><%= image_tag 'green.png', :class=>"dropt", :title=>"yes"%></td>
    <% else %>
        <td width="10%"><%= image_tag 'red.png', :class=>"dropt", :title=>"no" %></td>
    <% end %>
    <td width="5%" class="dropt" title="detail"  ><%= link_to image_tag('show.png'), candidate_path(candidate) %></td>
    <td width="5%" class="dropt" title="edit"  ><%= link_to image_tag('edit.png'), edit_candidate_path(candidate) %></td>
    <td width="5%" class="dropt" title="delete"  ><%= link_to  image_tag('delete.png'), candidate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% if candidate.schedule.nil?&&current_user.has_role?('admin')   %>
        <td width="5%" class="dropt" title="schedule a test"  ><%= link_to  image_tag('schedule.png'), onecan_schedule_path(candidate)%></td>
    <% elsif current_user.has_role?('admin') %>
        <td width="5%" class="dropt" title="test scheduled"  ><%=image_tag('assigned.png')%></td>
    <% end %>
  </tr>
<% end %>
</table>
<h4><%= will_paginate @candidates ,:container=>false %></h4>

