       <form class="filter_form">

            <table  cellpadding="5" align="right"  >
              <tr>
                <th>Name:</th>




                <% if !params[:search].nil?  %>
                    <td align="right" ><%= text_field_tag "search" , params[:search] %></td>
                <% else  %>
                    <td align="right" ><%= text_field_tag "search"  %></td>
                <% end  %>

                <td class="dropt" title="search" ><%=image_submit_tag 'find.png' , :class => 'search' %></td>


                </tr>
