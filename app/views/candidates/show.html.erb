<h1>Candidate detail</h1>
     <b>Name:</b>
     <%=  @candidate.name %><br />

     <b>Email:</b>
     <%=  User.find(@candidate.user_id).user_email  %>
     <br />

     <b>address:</b>
     <%=  @candidate.address %><br />

     <b>phone1:</b>
     <%=  @candidate.phone1 %><br />

     <b>phone2:</b>
     <%=  @candidate.phone2 %><br />

     <b>technology:</b>
     <%=  @candidate.technology %><br />

     <b>certification:</b>
     <%=  @candidate.certification %><br />

     <b>skills:</b>
     <%=  @candidate.skills %><br />


     <%# if @candidate.resume.exists? then %>
	      <%#= image_tag  @candidate.resume.url(:original) %>
     <%#end %>
     <% if !@candidate.resume.to_s.include?("missing.png") %>
     <b>resume:</b>
     <%=  @candidate.resume_file_name  %>
     <%=link_to  image_tag('download.png'),@candidate.resume.url(:original,false), :class=>"dropt", :title=>"download resume" %>
     <br />
     <% end %>

     <b>Scheduled date:</b>
     <%=  @candidate.schedule.sh_date.strftime("%b %d %A,%Y") if !@candidate.schedule.nil?  %><br />

     <b>Scheduled time:</b>
     <%=  @candidate.schedule.sh_date.strftime("%I:%M%p")  if !@candidate.schedule.nil? %><br />

        <br />
      <h3>Experiences</h3>

       <table border="3" width="75%"  >
      <tr>
        <th>from_date</th>
        <th>to_date</th>
        <th>experience_in</th>
        <th>experience_from</th>

      </tr>

      <% @candidate.experiences.each   do |experience| %>
          <tr>
            <td><%= experience.from_date.strftime("%b %d,%Y") %></td>
            <td><%= experience.to_date.strftime("%b %d,%Y") %></td>
            <td><%= experience.experience_in %></td>
            <td><%= experience.experience_from%></td>
          </tr>
      <% end %>
    </table>
        <%#= link_to  image_tag('addc.png'), new_candidate_experience_path(@candidate), :class=>"dropt", :title=>"add new experience"  %>

        <br /><h3>Qualifications</h3>

           <table border="3" width="75%" >
      <tr>
        <th>qualification_in</th>
        <th>qualification_from</th>
        <th>from_date</th>
        <th>to_date</th>
        <th>mark_percentage</th>
        <th>comments</th>

      </tr>

      <% @candidate.qualifications.each   do |qualification| %>
          <tr>
            <td><%= qualification.qualification_in %></td>
            <td><%= qualification.qualification_from %></td>
            <td><%= qualification.from_date.strftime(" %b %d,%Y") %></td>
            <td><%= qualification.to_date.strftime(" %b %d,%Y")%></td>
            <td><%= qualification.mark_percentage%></td>
            <td><%= qualification.comments%></td>
          </tr>
      <% end %>
    </table>
        <%#= link_to  image_tag('addc.png'), new_candidate_qualification_path(@candidate), :class=>"dropt", :title=>"add new qualification"  %>


        <br />
