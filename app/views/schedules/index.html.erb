<div class="row">
  <div class="span12 offset0">
    <h3 align="right" ><%= link_to image_tag('addsh.png'), new_schedule_path,:alt => "Edit Entry" %></h3>

    <h1>Scheduled Exams</h1>
    <table border="3" width="100%" >
      <tr>
        <th>Date</th>
        <th>Time</th>
        <th>Test</th>
        <th>Time Remaining</th>
      </tr>

      <% @schedules.each do |schedule| %>
          <tr>
            <%            @date= DateTime.new(schedule.sh_date.year, schedule.sh_date.month, schedule.sh_date.day,schedule.sh_time.hour-6, schedule.sh_time.min-30, schedule.sh_time.sec)            %>
            <td width="25%" ><%=  schedule.sh_date.strftime("%b %d %A,%Y") %></td>
            <td width="15%" ><%= schedule.sh_time.strftime("%I:%M%p") %></td>
            <td width="15%" ><%= schedule.exam.name  %></td>
            <td width="30%" ><%= time_ago_in_words(@date)    %></td>
            <td ><%= link_to image_tag('show.png'), schedule_path(schedule) %></td>
            <td><%= link_to image_tag('edit.png'), edit_schedule_path(schedule) %></td>
            <td><%= link_to  image_tag('delete.png'), schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </table>
<h4><%= will_paginate @schedules ,:container=>false %></h4>

  </div>
</div>

