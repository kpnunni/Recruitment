<h1>Instructions</h1>
<table class="table table-striped table-bordered" >
  <tr>
    <th>Instruction</th>
    <th></th><th></th>
  </tr>
  <% @instructions.each do |instruction| %>
      <tr >
        <td class="lft"  ><%= instruction.instruction %></td>
        <td width="5%" ><%= link_to 'Edit', edit_instruction_path(instruction) , :class=>"btn btn-mini", :title=>"edit" %></td>
        <% if instruction.exams.empty?  %>
            <td width="5%" ><%= link_to  'Delete', instruction, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-mini btn-danger", :title=>"delete"  %></td>
        <% else %>
            <td width="5%" ><%=link_to  "Delete", '#', :title=>"first delete this instruction from exams.", class: "btn btn-mini btn-inverse" ,remote: true %></td>
        <% end %>
      </tr>
  <% end %>
</table>
<%= pagination_links(@instructions) %>
<b>Add new Instruction:</b>
<%= render 'form' %>
<%= link_to image_tag('back.png') , exams_path  %>
