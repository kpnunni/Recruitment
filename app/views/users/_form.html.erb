<script type="text/javascript" >
    function toggle1(source) {

        var checkboxes = document.getElementsByName("user[role_ids][]");
        for(var i in checkboxes)
            checkboxes[i].checked = source.checked;
    }
</script>






<%= form_for  (@user) do |f| %>


    <div class="error_msg">
      <%= render  "shared/error_message", :target => @user  %>
    </div>



        <%= f.label :Email %>
        <%= f.text_field :user_email,:value=>"",:placeholder => "Eg:abc@gmail.com"%>

        <%= f.label :password %>
        <%= f.password_field :login_password,:value=>"",:placeholder => "****" %>

        <%= f.label :confirm_Password %>
        <%= f.password_field :login_password_confirmation,:placeholder => "****"  %>
        <br />


        <b>Roles:</b>
        <br />
        <input type="checkbox" onClick="toggle1(this)" /> Select/Un Select All

        <% Role.where("role_name!=?","Candidate").each do |role| %>
            <br />
            <%= check_box_tag "user[role_ids][]", role.id, @user.roles.include?(role)%>
            <%= role.role_name %>
        <% end %>


        <br />  <br />

           <%= f.submit "Register",:id=>"commit", class: "btn btn-large btn-primary" %>

              <br />  <br /><%= link_to image_tag('back.png') ,users_path %>

<% end %>


























